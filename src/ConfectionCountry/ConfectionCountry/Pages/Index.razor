@if (!_game.Started)
{
    <GameSetup Game="@_game" OnStartGame="@(() => _game.Start())" />
}
else if (!_game.Accepted)
{
    <GameUI Game="@_game" />
}
else
{
    <div>Hello.</div>
}

@code
{
    private Game _game = new Game();
}