<div class="batchStats">
    @if (Batch.CurrentGame != null)
    {
        <div class="topMargin">@(Batch.NumberOfGames) Games Played</div>
        <table class="topMargin">
            <tr>
                <th>Player</th>
                <th>Games Won</th>
                <th>%</th>
            </tr>
            @for (int i = 0; i < Batch.TemplateGame.Players.Count; i++)
            {
                Player player = Batch.TemplateGame.Players[i];
                int winCount = Batch.GetWinCount(player);
                <tr>
                    <td><div class="playerLabel @(Util.GetBootstrapClasses(player.Color))"><strong>@(player.Name)</strong></div></td>
                    <td>@(winCount)</td>
                    <td>@(((double)winCount) / Batch.NumberOfGames * 100)</td>
                </tr>
            }
        </table>
    }
</div>

@code {
    [Parameter] public Batch Batch { get; set; }
}
