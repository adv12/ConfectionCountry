<div class="player @(!Exists ? "noSuchPlayer": "")">
    @if (Exists)
    {
        <div>@Game.Players[PlayerIndex].Name)</div>
    }
</div>

@code {
    [Parameter] public Game Game { get; set; }
    [Parameter] public int PlayerIndex { get; set; }
    bool Exists => PlayerIndex < Game.Players.Count;
}
